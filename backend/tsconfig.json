{
    "compilerOptions": {
        "target": "es2018",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "./src",
        "allowJs": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "./test/**/*.ts"],
    "exclude": ["node_modules"]
}
